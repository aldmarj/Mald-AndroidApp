<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp">


    <android.support.v7.widget.CardView
        android:id="@+id/history_view"
        style="@style/MyCardViewStyle"
        android:layout_width="fill_parent"
        android:layout_height="150dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Client Name"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/client_work_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/client_name"
                android:text="Client Work Description" />

            <TextView
                android:id="@+id/worklog_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/client_work_description"
                android:text="WorkLog Location" />

            <TextView
                android:id="@+id/worklog_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/worklog_location"
                android:text="Worklog StartTime" />

            <TextView
                android:id="@+id/worklog_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/worklog_location"
                android:text="Worklog EndTme" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>