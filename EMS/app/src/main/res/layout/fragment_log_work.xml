<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/MyHintText">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/log_client_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:hint="Client Name"
                android:theme="@style/MyEditText" />

            <EditText
                android:id="@+id/log_work_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/log_client_name"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:theme="@style/MyEditText" />


            <EditText
                android:id="@+id/log_postcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/log_work_description"
                android:hint="Postcode"
                android:theme="@style/MyEditText" />

            <EditText
                android:id="@+id/log_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/log_end_time"
                android:layout_below="@+id/log_work_description"
                android:hint="Date"
                android:theme="@style/MyEditText" />

            <EditText
                android:id="@+id/log_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/log_postcode"
                android:hint="Start Time"
                android:theme="@style/MyEditText" />

            <EditText
                android:id="@+id/log_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/log_postcode"
                android:hint="End Time"
                android:theme="@style/MyEditText" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/add_work_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingBottom="30dp"
                android:src="@drawable/ic_add"
                android:theme="@style/MyFloatingButton" />

        </RelativeLayout>


    </android.support.design.widget.TextInputLayout>


</LinearLayout>
